<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Last_version_of_school_management_system</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Last_version_of_school_management_system.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="row mt-3">
        <div class="col-lg-2">

            <div class="card border-secondary mb-3">

                <div class="card-header h3 text-muted text-center">
                    All Actions
                </div>
                <div class="card-body" style="min-height:700px">
                    
                    
                    @* for the choosing  *@
                    <div class="row mt-1">

                        <div class="col">
                            <div class="d-grid">
                                <input type="button" value="Instructor" id="InstructorButton" class="btn card-text btn-dark" />

                            </div>
                        </div>
                    </div>




                    <div class="row mt-1">

                        <div class="col">
                            <div class="d-grid">
                                <input type="button" value="Course" id="CourseButton" class="btn card-text btn-dark" />

                            </div>
                        </div>
                    </div>

                    <div class="row mt-1">

                        <div class="col">
                            <div class="d-grid">
                                <input type="button" value="Department" id="DepartmentButton" class="btn card-text btn-dark" />

                            </div>
                        </div>
                    </div>

                    
                    @* --------------------------------------------------------------------------------------------- *@
                    <div id="Instructor-actions" style="display:none ;" class="mt-3">
                    
                    <div class="row mt-1">

                        <div class="col">
                            <div class="d-grid">
                                <a asp-action="getall" asp-controller="Instructor" class="btn card-text btn-dark">Get All instructors</a>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-1">
                        <div class="col">
                            <div class="d-grid">
                                <a asp-action="forgetbyid" asp-controller="Instructor" class="btn card-text btn-dark">Get instructor By ID </a>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-1">
                        <div class="col">
                            <div class="d-grid">
                                <a asp-action="forgetbudepartment" asp-controller="Instructor" class="btn card-text btn-dark">Get instructor By Department ID </a>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-1">
                        <div class="col">
                            <div class="d-grid">

                                <a asp-action="forgetbyname" asp-controller="Instructor" class="btn card-text btn-dark">Get instructor By Name </a>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-1">
                        <div class="col">
                            <div class="d-grid">
                                <a asp-action="edit" asp-controller="Instructor" class="btn card-text btn-dark"> Edit Instructor </a>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-1">
                        <div class="col">
                            <div class="d-grid">
                                <a asp-action="addnew" asp-controller="Instructor" class="btn card-text btn-dark"> Add New Instructor </a>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-1">
                        <div class="col">
                            <div class="d-grid">
                                <a asp-action="delete" asp-controller="Instructor" class="btn card-text btn-dark"> Delete </a>
                            </div>
                        </div>
                    </div>

                    </div>

                </div>
            </div>
        </div>

        @* here we will add the content of our site *@


        <div class="col-lg-9">

            <div class="card border-secondary" style="min-height:750px">

                <div class="card-header h3 text-muted text-center">Data You Asked </div>

                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>


            </div>

            @* *------------------------ *@
            <header>
            </header>


            <footer class="border-top border-dark text-muted">



                <div class="mt-2 text-center">

                    <h5>created by hesham ayman </h5>

                </div>
            </footer>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @await RenderSectionAsync("Scripts", required: false)

            <script>

                document.getElementById("InstructorButton").addEventListener('click',function(){

                    document.getElementById("Instructor-actions").style = "display: block;"

                })


            </script>
</body>




</html>

